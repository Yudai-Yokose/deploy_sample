<div id="sign_up_errors"></div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :username, for: "user_registration_username" %><br />
    <%= f.text_field :username, autofocus: true, id: "user_registration_username", autocomplete: "username" %>
  </div>

  <div class="field">
    <%= f.label :email, for: "user_registration_email" %><br />
    <%= f.email_field :email, autofocus: true, id: "user_registration_email", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, for: "user_registration_minimum_password_length" %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, id: "user_registration_minimum_password_length", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, for: "user_registration_confirmation" %><br />
    <%= f.password_field :password_confirmation, id: "user_registration_confirmation", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>