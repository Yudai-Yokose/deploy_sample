<div id="login_errors"></div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: 'new_user_session' }) do |f| %>
  <div class="field">
    <%= f.label :email, for: "user_session_email" %><br />
    <%= f.email_field :email, autofocus: true, id: "user_session_email", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, for: "user_session_password" %><br />
    <%= f.password_field :password, id: "user_session_password", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('.sign_in') %>
  </div>
<% end %>

<%= link_to t('.forgot_your_password'), new_password_path(resource_name) %><br />
